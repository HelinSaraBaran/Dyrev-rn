@page
@model DyreVaernet2._0.Pages.CreateAnimalModel
@{
    ViewData["Title"] = "Opret nyt dyr";
}

<h1>Opret et nyt dyr</h1>

<form method="post">
    <div>
        <label>Navn:</label>
        <input type="text" name="Animal.Name" required />
    </div>
    <div>
        <label>Art:</label>
        <input type="text" name="Animal.Species" required />
    </div>
    <div>
        <label>Race:</label>
        <input type="text" name="Animal.Race" />
    </div>
    <div>
        <label>Køn:</label>
        <input type="text" name="Animal.Gender" required />
    </div>
    <div>
        <label>Chipnummer:</label>
        <input type="text" name="Animal.ChipNumber" />
    </div>
    <div>
        <label>Særlige kendetegn:</label>
        <input type="text" name="Animal.SpecialMarks" />
    </div>
    <div>
        <label>Størrelse:</label>
        <input type="text" name="Animal.Size" />
    </div>
    <div>
        <label>Fødselsår:</label>
        <input type="number" name="Animal.BirthYear" />
    </div>
    <div>
        <label>Steriliseret:</label>
        <input type="checkbox" name="Animal.IsSterilized" />
    </div>
    <div>
        <label>Vaccineret:</label>
        <input type="checkbox" name="Animal.IsVaccinated" />
    </div>
    <div>
        <label>Billedsti:</label>
        <input type="text" name="Animal.ImagePath" />
    </div>
    <div>
        <label>Beskrivelse:</label>
        <textarea name="Animal.Description"></textarea>
    </div>

    <button type="submit">Gem dyr</button>
</form>
