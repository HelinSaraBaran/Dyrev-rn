@page
@model Dyreværn.Pages.ActivitySignupsModel
@{
    ViewData["Title"] = "Tilmeldinger til aktiviteter";
}

<h1 class="mt-4">Tilmeldinger til aktiviteter</h1>

<!-- Tabel over alle tilmeldte personer -->
<table class="table table-striped">
    <thead>
        <tr>
            <th>Navn</th>
            <th>E-mail</th>
            <th>Aktivitet</th>
            <th>Tilmeldt</th>
            <th></th> <!-- Kolonne til slet-knap -->
        </tr>
    </thead>
    <tbody>
        @for (int i = 0; i < Model.Signups.Count; i++)
        {
            <tr>
                <td>@Model.Signups[i].Name</td>
                <td>@Model.Signups[i].Email</td>
                <td>@Model.Signups[i].Activity</td>
                <td>@Model.Signups[i].SignupDate.ToString("dd-MM-yyyy HH:mm")</td>
                <td>
                    <form method="post" asp-page-handler="RemoveSignup" class="d-inline">
                        <input type="hidden" name="IndexToRemove" value="@i" />
                        <button type="submit" class="btn btn-sm btn-danger">Slet</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
