<!DOCTYPE html>
<html lang="da">
<head>
    @RenderSection("Styles", required: false)
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Dyreværn</title>

    <!-- Stylesheets -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Dyreværn.styles.css" asp-append-version="true" />
</head>
<body>

    <!-- Header med grøn navbar og logo -->
    <header>
        <nav class="navbar navbar-expand-sm navbar-dark bg-success px-3">
            <div class="container">

                <!-- Logo og navn -->
                <a class="navbar-brand d-flex align-items-center" asp-page="/Index">
                    <img src="~/images/DVlog.png" alt="Logo" style="height: 40px; border-radius: 4px;" />
                    <span class="ms-2">Dyreværn</span>
                </a>

                <!-- Mobilknap -->
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNavbar"
                        aria-controls="mainNavbar" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <!-- Menu -->
                <div class="collapse navbar-collapse" id="mainNavbar">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link text-white @(ViewContext.ActionDescriptor.DisplayName.Contains("About") ? "active" : "")" asp-page="/About">Om os</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white @(ViewContext.ActionDescriptor.DisplayName.Contains("Adopt") ? "active" : "")" asp-page="/Adopt">Adopter</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white @(ViewContext.ActionDescriptor.DisplayName.Contains("BookingInfo") ? "active" : "")" asp-page="/BookingInfo">Book besøg</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white @(ViewContext.ActionDescriptor.DisplayName.Contains("EmployeeList") ? "active" : "")" asp-page="/EmployeeList">Medarbejdere</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white @(ViewContext.ActionDescriptor.DisplayName.Contains("Activity") ? "active" : "")" asp-page="/Activity">Aktiviteter</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white @(ViewContext.ActionDescriptor.DisplayName.Contains("BookingOverview") ? "active" : "")" asp-page="/BookingOverview">Bookingoversigt</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white @(ViewContext.ActionDescriptor.DisplayName.Contains("ActivitySignups") ? "active" : "")" asp-page="/ActivitySignups">Tilmeldinger</a>
                        </li>
                    </ul>
                </div>

            </div>
        </nav>
    </header>

    <!-- Hovedindhold uden container, så siderne styrer deres layout -->
    <main role="main" class="pb-3">
        @RenderBody()
    </main>

    <!-- Footer -->
    <footer class="border-top footer text-muted text-center mt-4">
        <div class="container">
            &copy; 2025 - Dyreværn - <a asp-page="/About">Om os</a>
        </div>
    </footer>

    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
